@model Configuration.WebApp.Models.ConfigurationItem

<h2>Konfigürasyon Güncelle</h2>

<form method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <input class="form-control" asp-for="Type" />
    </div>
    <div class="form-group">
        <label>Value</label>
        <input class="form-control" asp-for="Value" />
    </div>
    <div class="form-group">
        <label>IsActive</label>
        <input type="checkbox" asp-for="IsActive" />
    </div>
    <div class="form-group">
        <label>ApplicationName</label>
        <input class="form-control" asp-for="ApplicationName" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
